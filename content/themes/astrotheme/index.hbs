{{! USER CONFIGURATION OF THIS PAGE IS NOT REQUIRED }}
{{!< default}}

{{#if @blog.cover}}
<div id="cover" class="cover post indexfeature featured">
	<div class="background" style="background-image: url('{{@blog.cover}}');"></div>
	<header class="wrapper">
		{{#if @blog.logo}}<img src="{{@blog.logo}}" class="profileimage" alt="{{@blog.title}}">{{/if}}
		<p>Hi, I'm <a href="http://twitter.com/robertbenj" class="coverlink">@robertbenj</a>, a writer, developer, and <a href="http://robertbenjamin.me/san-sebastian-first-impressions/" class="coverlink">photographer</a> from the US. I enjoy traveling (currently in Spain) and listening to good music, but my favorite activity is probably reading.<!-- {{@blog.description}} --></p>
	</header>
	<i class="fa fa-chevron-down movedown"></i>
</div>
{{/if}}

<div class="profile">
	{{#if @blog.logo}}<img src="{{@blog.logo}}" class="profileimage" alt="{{@blog.title}}">{{/if}}
	<h4>{{@blog.title}}</h4>
	<p>{{@blog.description}}</p>
	<hr>
</div>

<section class="posts postindex wrapper">

	{{> loop}}

	{{pagination}}

</section>
